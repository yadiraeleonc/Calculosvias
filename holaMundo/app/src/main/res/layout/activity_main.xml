<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignWithParentIfMissing="false"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:background="@android:drawable/btn_star_big_on"
    android:foregroundGravity="top|left|bottom|center_vertical|clip_horizontal|center|fill_vertical|clip_vertical|right|center_horizontal|fill"
    android:orientation="horizontal"
    android:rotation="1"
    android:saveEnabled="true"
    android:scrollbarDefaultDelayBeforeFade="200"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/IDPRESIONA"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="180dp"
        android:layout_height="111dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:background="#F44336"
        android:text="Presiona aqui"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.719"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHolaMundo"
        android:layout_width="53dp"
        android:layout_height="0dp"
        android:layout_marginStart="168dp"
        android:layout_marginLeft="168dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDPRESIONA" />

    <TextView
        android:id="@+id/tVpoli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="392dp"
        android:text="Institución Universitaria Politécnico Grancolombiano - 2020"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FF5722"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDPRESIONA" />

</androidx.constraintlayout.widget.ConstraintLayout>